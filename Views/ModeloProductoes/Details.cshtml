        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Productos.CodigoProducto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Productos.LineaProduccionFkNavigation.NombreLineaProduccion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Productos.LineaProduccionFkNavigation.NombreLineaProduccion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Productos.NombreModelo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Productos.NombreModelo)
        </dd>
        <dt class="col-sm-2">
