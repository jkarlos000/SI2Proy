@model SI2Proy.ViewModels.ModeloProductoView

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>ModeloProducto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
