@model IEnumerable<SI2Proy.Models.Vendedor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Vendedors" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroVendedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroCedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreVendedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecordVentas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroVendedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroCedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreVendedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecordVentas)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NumeroVendedor">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NumeroVendedor">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NumeroVendedor">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
