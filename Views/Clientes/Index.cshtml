@model IEnumerable<SI2Proy.Models.Cliente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Clientes" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona.NumeroCedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona.NombreCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrioridadCliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Persona.NumeroCedula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Persona.NombreCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaIngreso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrioridadCliente)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.NumeroCliente">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.NumeroCliente">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.NumeroCliente">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
