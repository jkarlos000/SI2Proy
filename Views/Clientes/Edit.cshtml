@model SI2Proy.Models.Cliente

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NumeroCliente" />
            <div class="form-group">
                <label asp-for="Persona.NumeroCedula" class="control-label"></label>
                <input asp-for="Persona.NumeroCedula" class="form-control" />
                <span asp-validation-for="Persona.NumeroCedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.NombreCliente" class="control-label"></label>
                <input asp-for="Persona.NombreCliente" class="form-control" />
                <span asp-validation-for="Persona.NombreCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefonoCelular" class="control-label"></label>
                <input asp-for="TelefonoCelular" class="form-control" />
                <span asp-validation-for="TelefonoCelular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrioridadCliente" class="control-label"></label>
                <input asp-for="PrioridadCliente" class="form-control" />

